%table.table.table-condensed.table-striped
  %thead
    %tr
      %th Moneda
      %th Responsable
      %th Ingreso
      %th Egreso
      %th Balance
  %tfoot
    - @balances_resumen.each do |fila|
      %tr
        %th{colspan: 2}= fila.moneda
        %th= Money.thousands_separator fila.ingreso
        %th= Money.thousands_separator fila.egreso
        %th= Money.thousands_separator fila.cantidad
  %tbody
    - @balances.each do |fila|
      %tr
        %td= fila.moneda
        %td
          %img{ gravatar_attrs(fila.responsable, size: 25, secure: true) }
          = fila.nombre
        %td= Money.thousands_separator fila.ingreso
        %td= Money.thousands_separator fila.egreso
        %td= Money.thousands_separator fila.cantidad
