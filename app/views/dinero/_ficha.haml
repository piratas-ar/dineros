.list-group-item
  .row
    .col-sm-4
      %img.pull-left{ gravatar_attrs(dinero.responsable,
        size: 70, title: dinero.nombre, secure: true ) }
      %h4= dinero.dinero.format
      %p
        %a{href: url(:index, params.merge('grupo' => dinero.grupo))}= dinero.grupo
        \/
        %a{href: url(:index, params.merge('responsable' => dinero.nombre))}
          = dinero.nombre
    .col-sm-8
      %p= dinero.comentario
      %p
        - fecha = dinero.created_at.strftime('%F')
        %a{href: url(:index, params.merge('created_at' => fecha))}= fecha
